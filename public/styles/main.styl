lightseagreen = #39bca4
cadetblue = #6c94b1
beidge = #fcfcf9
darkcyan = #0092b2
wheat =  #dfd3b6
crimson = #ed3b3b

body
    background beidge
    font-family 'Source Sans Pro', sans-serif
img
    width 100%
a
    color darkcyan

.no-float
    float none

.no-list
    margin 0
    padding 0
    text-align center
    li
        list-style-type none
        display inline-block
        a
            color white
            font-size 1.7em
.avatar
    width 200px
    heigth 200px
    border-radius 50%
.shadow-transparent
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .26)

.inline-block
    display inline-block

.vertical-align
    vertical-align top

.margin-up
    margin-top 60px

.margin-right
    margin-right 1em

.pacifico
    font-family 'Pacifico', cursive

.big
    font-size 2.5em

.medium
    font-size 1.5em

.small
    font-size 1em

.color-lightgreen
    color lightseagreen

.color-wheat
    background-color wheat

.padding-large
    padding 10px 10px

.padding-medium
    padding 5px

.color-blue
    color cadetblue

.color-crimson
    background-color crimson

.delay-1
    -webkit-animation-delay 1s
    -moz-animation-delay 1s
    animation-delay 1s

.delay-2
    -webkit-animation-delay 2s
    -moz-animation-delay 2s
    animation-delay 2s

@media screen and (max-width 700px)
    .no-list
        li
            a
                font-size 1.3em

